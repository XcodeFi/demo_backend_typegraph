{
    "name": "graphql-mongdb-api",
    "version": "1.0.0",
    "description": "api graphql with mongodb step by step",
    "main": "index.js",
    "scripts": {
        "start-mongod-in-ubuntu": "sudo systemctl start mongod",
        "dev": "ts-node-dev --respawn src/server.ts",
        "start": "npm run build && node dist/server.js",
        "build": "tsc -p . && ncp src/schema.gql dist/schema.gql",
        "lint": "eslint . --ext .ts",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "keywords": [
        "mongodb",
        "type-graphql"
    ],
    "author": "xcodefi",
    "license": "ISC",
    "dependencies": {
        "apollo-server-core": "^3.6.1",
        "apollo-server-express": "^3.5.0",
        "bcrypt": "^5.0.1",
        "class-validator": "^0.13.2",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "eslint-config-defaults": "^9.0.0",
        "express": "^4.17.2",
        "graphql": "^15.8.0",
        "graphql-upload": "^13.0.0",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^6.1.3",
        "mongoose-paginate-v2": "^1.4.2",
        "reflect-metadata": "^0.1.13",
        "type-graphql": "^1.1.1",
        "typedi": "^0.10.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/graphql": "^14.5.0",
        "@types/graphql-upload": "^8.0.11",
        "@types/jest": "^27.4.1",
        "@types/jsonwebtoken": "^8.5.6",
        "@types/mongoose-paginate-v2": "^1.4.2",
        "@types/node": "^17.0.4",
        "eslint": "^8.6.0",
        "jest": "^27.5.1",
        "mongodb-memory-server": "^8.5.0",
        "ncp": "^2.0.0",
        "nodemon": "^2.0.15",
        "ts-jest": "^27.1.4",
        "ts-node": "^10.4.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.7.2"
    }
